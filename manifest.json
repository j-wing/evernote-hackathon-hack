{
    "name": "Evernote Hackathon",
    "version": "0.0.1",
    "manifest_version": 2,
    "description" : "Automatically defines words.",
    "icon":{"128": "icon.png"},
    "background": {
    	"persistent": false,
    	"scripts": ["js/jquery-2.1.1.js", "js/content.js"]
  	},
    "permissions":[
        "https://*.evernote.com/",
        "http://*.wikipedia.org/",
        "https://*.wikipedia.org/"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.evernote.com/Home.action"],
        "js": ["js/jquery-2.1.1.js", "js/getwiki.js", "js/main.js"],
        "css":["css/wiki.css"],
        "run_at":"document_end"
      }
    ],
    "browser_action": {
    	"default_title": "",
    	"default_icon": "icon.png",
    	"default_popup": "popup.html"
  	}
}
